@{
    ViewData["Title"] = "Главная";
}

<div class="col-sm-12">
    <br />
    <div class="row pt-sm-3 pb-sm-3">
        <input type="hidden" id="imageUrl" />
        <input type="file" accept=".jpg, .jpeg, .png" hidden id="fileInputItem" onchange="inputFile_changed(this.files)" />
        <a id="downloadLnk" download="File from online editor.jpg" hidden></a>

        <button id="openButton" class="btn btn-menu btn-menu-open ml-0" onclick="open_click();"> Открыть</button>
        <button id="saveButtton" class="btn btn-menu btn-menu-save" onclick="save_click();">Сохранить</button>
        <button id="saveAsButton" class="btn btn-menu btn-menu-save mr-5">Сохранить как...</button>
        <button id="undoButton" class="btn btn-menu btn-menu-undo ml-5">Назад</button>
        <button id="redoButton" class="btn btn-menu btn-menu-redo mr-0">Вперёд</button>
    </div>

    <div class="row work-div">
        <div class="pl-sm-4 pr-sm-4 border rounded tool-div">
            <b>Модераторы</b><br />
            <button id="cutAction" class="btn btn-filter">обрезать</button><br />
            <button id="resizeAction" class="btn btn-filter">изменить размер</button><br />
            <br />

            <b>Повороты</b><br />
            <button id="rightRotate" class="btn btn-filter" onclick="rotateRight_click()">поворот вправо</button><br />
            <button id="leftRotate" class="btn btn-filter" onclick="rotateLeft_click()">поворот влево</button><br />
            <br />

            <b>Фильтры</b><br />
            <button id="blurFilter" class="btn btn-filter" onclick="blurFiltrButton_click()">размытие</button><br />
            <button id="brightnessFilter" class="btn btn-filter" onclick="brightnessFiltrButton_click()">яркое</button><br />
            <button id="notBrightnessFilter" class="btn btn-filter" onclick="notBrightnessFiltrButton_click()">темное</button><br />

            <button id="contrastFilter" class="btn btn-filter" onclick="contrastFiltrButton_click()">контрастное</button><br />
            <button id="shadowFilter" class="btn btn-filter" onclick="shadowFiltrButton_click()">тени</button><br />
            <button id="grayscaleFilter" class="btn btn-filter" onclick="grayscaleButton_click()">черно-белое</button><br />

            <button id="hueRotate1Filter" class="btn btn-filter" onclick="hueRotate1Button_click()">замена цвета 1</button><br />
            <button id="hueRotate2Filter" class="btn btn-filter" onclick="hueRotate2Button_click()">замена цвета 2</button><br />
            <button id="hueRotate3Filter" class="btn btn-filter" onclick="hueRotate3Button_click()">замена цвета 3</button><br />

            <button id="invertFilter" class="btn btn-filter" onclick="invertButton_click()">неготив</button><br />
            <button id="sepiaFilter" class="btn btn-filter" onclick="sepiaFiltrButton_click()">старина</button><br />
            <button id="noneFilter" class="btn btn-filter" onclick="noneFiltrButton_click()">нет</button><br />

        </div>

        <div class="bg-secondary canvas-div">
            <canvas id="myCanvas" class=""></canvas>
        </div>
    </div>
</div>
<br />